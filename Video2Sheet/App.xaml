        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>

                <util:SharedResourceDictionary Source="/Video2Sheet;component/MVVM/Model/Converter/Converter.xaml" />

                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
